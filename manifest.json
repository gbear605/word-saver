{
  "manifest_version": 2,
  "name": "WordReference Saver",
  "description": "Save words from WordReference and Wiktionary to a text list.",
  "version": "1.4",
  "homepage_url": "https://greenwichmeanti.me/wordreference",

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "general-parsing.js",
      "background.js"
    ]
  },

  "icons": {
    "48": "icons/page-48.png",
    "32": "icons/page-32.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wordreference.com/*"],
      "js": [
        "browser-polyfill.js",
        "general-parsing.js",
        "word-reference-content-script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://en.wiktionary.org/*"],
      "js": [
        "browser-polyfill.js",
        "general-parsing.js",
        "wiktionary-content-script.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": "icons/page-32.png"
  },

  "permissions": [
    "*://*.wordreference.com/*",
    "storage",
    "unlimitedStorage",
    "notifications"
  ]
}
