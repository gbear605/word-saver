{
  "manifest_version": 2,
  "name": "Word Saver",
  "description": "Save words from WordReference and Wiktionary to a text list.",
  "version": "1.5.1",
  "homepage_url": "https://greenwichmeanti.me/wordsaver",

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "general-parsing.js",
      "context-menus.js",
      "background.js"
    ]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{389d5e14-b6b7-46c2-a379-e01f727e4d2b}"
    }
  },


  "icons": {
    "48": "icons/page-48.png",
    "32": "icons/page-32.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wordreference.com/*"],
      "js": [
        "browser-polyfill.js",
        "general-parsing.js",
        "word-reference-content-script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://en.wiktionary.org/*"],
      "js": [
        "browser-polyfill.js",
        "general-parsing.js",
        "en-wiktionary-content-script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://sv.wiktionary.org/*"],
      "js": [
        "browser-polyfill.js",
        "general-parsing.js",
        "sv-wiktionary-content-script.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": "icons/page-32.png"
  },

  "permissions": [
    "*://*.wordreference.com/*",
    "storage",
    "unlimitedStorage",
    "notifications",
    "contextMenus"
  ]
}
